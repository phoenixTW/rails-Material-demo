<%= stylesheet_link_tag 'posts/single_post', media: 'all', 'data-turbolinks-track' => true %>
<div class="mdl-cell mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-card mdl-shadow--3dp">
  <a href="/posts/<%= post.id %>">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text"><%= post.title %></h2>
    </div>
    <div class="mdl-card__supporting-text body-text-wrapper"><%= truncate(post.body.html_safe, :length => 150) %></div>
  </a>
  <div class="mdl-card__actions mdl-card--border">
    <%= link_to 'Show', post, :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>

  </div>
</div>
